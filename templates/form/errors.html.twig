{% block form_errors %}
    {% if errors|length > 0 %}
        {% if compound %}
            {# ... display the global form errors #}
            <div class="ui error message">
                <ul class="list">
                    {% for error in errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% else %}
            {# ... display the errors for a single field #}
            <div class="ui pointing red basic label">
                {% for error in errors %}
                    {{ error.message }}<br>
                {% endfor %}
            </div>
        {% endif %}
    {% endif %}
{% endblock form_errors %}
